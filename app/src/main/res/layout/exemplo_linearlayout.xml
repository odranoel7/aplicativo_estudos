<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools= "http://schemas.andoid.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnPrimeiroHelloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá Mundo" />

    <Button
        android:id="@+id/btnSegundoHelloWorld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Olá Mundo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professor"
            style="@style/estiloExemplo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wagner"
            android:background="@color/vermelo"
            android:textColor="@color/azul"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bola_basquete"
        android:layout_gravity="left"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bola_basquete"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bola_basquete"
        android:layout_gravity="right"/>



    <Button
        android:id="@+id/btnTerceiroHelloWorld"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Olá Mundo" />
</LinearLayout>
