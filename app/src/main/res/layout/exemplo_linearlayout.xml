<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.andoid.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnPrimeiroHelloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá Mundo" />

    <Button
        android:id="@+id/btnSegundoHelloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá Mundo" />


    <TextView
        android:id="@+id/textView3"
        style="@style/estiloExemplo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/vermelo"
        android:text="Wagner"
        android:textColor="@color/azul" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bola_basquete" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bola_basquete" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bola_basquete" />


    <Button
        android:id="@+id/btnTerceiroHelloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá Mundo" />
</androidx.constraintlayout.widget.ConstraintLayout>
